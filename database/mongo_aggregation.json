[
  {
    "$lookup": {
      "from": "db",
      "localField": "title_en",
      "foreignField": "title",
      "as": "linked"
    }
  },
  {
    "$unwind": {
      "path": "$linked"
    }
  },
  {
    "$project": {
      "_id": 0,
      "age_rating": 1,
      "age_rating_guide": 1,
      "average_ratingr": 1,
      "description": 1,
      "episode_count": 1,
      "episode_length": 1,
      "poster_image": "$linked.img_url",
      "show_type": 1,
      "studio": 1,
      "staff": 1,
      "title_en": 1,
      "title_ja_jp": 1,
      "total_length": 1,
      "release_season": 1,
      "release_start_year": 1,
      "release_end_year": 1,
      "tags": 1,
      "voice_actors": 1
    }
  },
  {
    "$out": "Hope_IT_FINAL"
  }
]


